@using PokeApiNet
<h3>Pokedex</h3>

@foreach pokemon in PokemonInDex {
    <PokemonComponent PokedexId=pokemon.EntryNumber/>
}


@code {
    // Right now am only doing Kanto, will change if I need more pages

    PokeApiClient pokeApiClient = new PokeApiClient();

    List<PokemonEntry> PokemonInDex { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Pokedex pokedex = await pokeApiClient.GetResourceAsync<Pokedex>("kanto"); // get all kanto pokemon 0-151
        PokemonInDex = pokedex.PokemonEntries; // all entries 0-151 with the correct id to grab
        return base.OnInitializedAsync();
    }
}
