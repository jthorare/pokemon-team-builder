
<Figure>
    <FigureImage Source=@ImgSrc />
</Figure>
@code {

    [Parameter]
    public int PokedexId
    {
        get { return PokedexId; }
        set
        {
            PokedexId = value;
            SetImgSrc();
        }
    }

    private string? ImgSrc { get; set; }

    protected override Task OnInitializedAsync()
    {
        SetImgSrc();
        return base.OnInitializedAsync();
    }

    private void SetImgSrc()
    {
        ImgSrc = $"pokemon/{PokedexId}.png";
        Console.WriteLine($"poke comp {PokedexId}");
        StateHasChanged();
    }

}
