@using pokemon_team_builder.Services
@inject PokeApiService pokeService

<Figure>
    <FigureImage Source=@ImgSrc />
</Figure>
@code {
    private int pokedexId = 0;

    [Parameter, EditorRequired]
    public int NatDexId { get; set; }

    private string? ImgSrc { get; set; }

    protected override Task OnInitializedAsync()
    {
        SetImgSrc();
        return base.OnInitializedAsync();
    }

    private void SetImgSrc()
    {
        ImgSrc = $"pokemon/{NatDexId}.png";
        //var pokemon = await pokeService.GetPokemon(NatDexId.ToString());
        StateHasChanged();
    }

}
